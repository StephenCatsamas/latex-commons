%%%%%%% editing macros %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\todocolour}{red!80!black}

\ifcommons@draft
	\RequirePackage{tocloft}
	\newlistof{todo}{todos}{Todo List}

	\newcommand{\todobare}[1]{%
		\refstepcounter{todo}%
		\addcontentsline{todos}{todo}{\protect\numberline{\thetodo}#1}%
		\noindent #1%
	}
    \newcommand{\printlistoftodo}{\listoftodo}
\else
	\newcommand{\todobare}[1]{}
    \newcommand{\printlistoftodo}{}
\fi

\newcommand{\todo}[1]{\textbf{\textcolor{\todocolour}{\todobare{#1}}}}

\newcommand{\addcite}{\todo{[cite]}\xspace}

